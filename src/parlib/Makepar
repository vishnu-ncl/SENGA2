#!/bin/sh
#
#  Makes a library of the parallel interface routines
#
#
ftn -O3 -Wall -I/usr/include -c p_init.f
ftn -O3 -Wall -I/usr/include -c p_stop.f
ftn -O3 -Wall -I/usr/include -c p_size.f
ftn -O3 -Wall -I/usr/include -c p_send.f
ftn -O3 -Wall -I/usr/include -c p_recv.f
ftn -O3 -Wall -I/usr/include -c p_bcst.f
ftn -O3 -Wall -I/usr/include -c p_summ.f
ftn -O3 -Wall -I/usr/include -c p_gmax.f
ftn -O3 -Wall -I/usr/include -c p_gmin.f
ftn -O3 -Wall -I/usr/include -c p_sync.f
#
ar rcsv parlib.a \
        p_init.o p_stop.o p_size.o p_send.o p_recv.o \
        p_bcst.o p_summ.o p_gmax.o p_gmin.o p_sync.o
#
rm *.o
#
exit
