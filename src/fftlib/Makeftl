#!/bin/sh
#
#  Makes a library of the FFT routines
#
#
h5pfc -O3 -c fftgen.f
h5pfc -O3 -c fftgin.f
#
h5pfc -O3 -c fftfr2.f
h5pfc -O3 -c fftfr3.f
h5pfc -O3 -c fftfr5.f
h5pfc -O3 -c fftfr7.f
h5pfc -O3 -c fftfra.f
#
h5pfc -O3 -c fftnr2.f
h5pfc -O3 -c fftnr3.f
h5pfc -O3 -c fftnr5.f
h5pfc -O3 -c fftnr7.f
h5pfc -O3 -c fftnra.f
#
h5pfc -O3 -c fftp1d.f
h5pfc -O3 -c fftpin.f
h5pfc -O3 -c fftf1d.f
#
ar rcsv fftlib.a \
        fftgen.o fftgin.o \
        fftfr2.o fftfr3.o fftfr5.o fftfr7.o fftfra.o \
        fftnr2.o fftnr3.o fftnr5.o fftnr7.o fftnra.o \
        fftp1d.o fftpin.o fftf1d.o
#
rm *.o
#
exit
